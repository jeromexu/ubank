<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" 
	xmlns="http://java.sun.com/xml/ns/j2ee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee 
	http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<servlet>
		<display-name>jcaptcha</display-name>
		<servlet-name>jcaptcha</servlet-name>
		<servlet-class>
		com.ufinity.marchant.ubank.captcha.ImageCaptchaServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>jcaptcha</servlet-name>
		<url-pattern>/jcaptcha</url-pattern>
	</servlet-mapping>
  
  <servlet>
    <servlet-name>loginServlet</servlet-name>
    <servlet-class>com.ufinity.marchant.ubank.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>regServlet</servlet-name>
  	<servlet-class>
  	com.ufinity.marchant.ubank.servlet.RegServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>loginServlet</servlet-name>
    <url-pattern>/portal/login.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>loginServlet</servlet-name>
    <url-pattern>/portal/logout.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>regServlet</servlet-name>
  	<url-pattern>/portal/register.do</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>folderServlet</servlet-name>
    <servlet-class>com.ufinity.marchant.ubank.servlet.FolderServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>folderServlet</servlet-name>
    <url-pattern>/portal/show.do</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>searchServlet</servlet-name>
    <servlet-class>com.ufinity.marchant.ubank.servlet.SearchServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>searchServlet</servlet-name>
    <url-pattern>/portal/search.do</url-pattern>
  </servlet-mapping>
  
  <filter>
    <filter-name>charsetFilter</filter-name>
    <filter-class>com.ufinity.marchant.ubank.filter.CharsetFilter</filter-class>
    <init-param>
      <param-name>enable</param-name>
      <param-value>true</param-value>
    </init-param>
    <init-param>
      <param-name>encode</param-name>
      <param-value>utf-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>charsetFilter</filter-name>
    <url-pattern>*</url-pattern>
  </filter-mapping>
  
  <error-page>
    <error-code>404</error-code>
    <location>/common/404.html</location>
  </error-page>
  
</web-app>
